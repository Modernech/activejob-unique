<style type="text/css">
  a.no-decoration:focus, a.no-decoration:hover {
    text-decoration: none;
  }
  header.row .pagination {
    margin: 25px 0 0 0 !important;
  }
  form .btn {
    margin-right: 0;
  }
  .label-none {
    background: #eee;
    color: #999;
  }
</style>
<%
  def stats_label(value, style)
    if "#{value}" == "0"
      return "<span class='label label-none'>#{value}</span>"
    else
      return "<span class='label label-#{style}'>#{value}</span>"
    end
  end

  def progress_label(progress)
    case progress
    when 'enqueue_processed', 'perform_processed'
      'success'
    when 'enqueue_skipped', 'perform_skipped'
      'warning'
    when 'enqueue_failed', 'perform_failed'
      'danger'
    end
  end
%>
<header class='row'>
  <div class='col-sm-10 col-xs-8'>
    <h3>
      <a class="no-decoration" href="<%= "#{root_path}job_stats/logs/#{@day}/#{@job_name}/#{@queue_name}/#{@uniqueness_id}" %>">
        Job Logs
      </a>
      /
      <span>Detail</span>
    </h3>
  </div>
  <div class='col-sm-2 col-xs-4 text-right'>
    <form method="POST" style="margin-top: 25px;" action="<%= "#{root_path}job_stats/logs/#{@day}/#{@job_name}/#{@queue_name}/#{@uniqueness_id}/#{@job_id}/delete"%>">
      <%= csrf_tag %>
      <input class='btn btn-danger' type="submit" name="delete" value="Delete All" data-confirm="Are you sure you want to delete the job log: [<%= @job_id %>]?"/>
    </form>
  </div>
</header>

<table class="table table-hover table-bordered table-striped table-white">
  <tr>
    <th class="col-xs-3">Day</th>
    <td><%= @day %></td>
  </tr>
  <tr>
    <th>Job</th>
    <td><code><%= @job_name %></code></td>
  </tr>
  <tr>
    <th>Queue</th>
    <td><%= @queue_name %></td>
  </tr>
  <tr>
    <th>Arguments</th>
    <td><pre class="title" style="margin:0;"><%= JSON.pretty_generate(@job_log[:args]) %></pre></td>
  </tr>
  <tr>
    <th>Uniqueness Id</th>
    <td><code><%= @uniqueness_id %></code></td>
  </tr>
  <tr>
    <th>Job Id</th>
    <td><code><%= @job_id %></code></td>
  </tr>
</table>

<h3>Progresses</h3>
<table class="table table-hover table-bordered table-striped table-white">
    <th>Stage</th>
    <th>When</th>
    <th>Mode</th>
    <th colspan="2">Expires</th>
    <th>Debug</th>
  </thead>
  <tbody>
    <% @job_log[:logs].each do |log| %>
      <tr>
        <td class="<%= progress_label(log[:progress])%>" rowspan="<%= log[:reason].empty? ? '' : 2 %>"><%= log[:progress] %></td>
        <td><%= (relative_time(log[:timestamp]) rescue 'err') %></td>
        <td><%= log[:mode] %></td>
        <td><%= log[:expiration] %></td>
        <td><%= (relative_time(log[:expires]) rescue '') %></td>
        <td><%= log[:debug] %></td>
      </tr>
      <% unless log[:reason].empty? %>
        <tr><td class="<%= progress_label(log[:progress])%>" colspan="6"><%= log[:reason] %></td></tr>
      <% end %>
    <% end %>
  </tbody>
</table>
